{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "plugins": [{ "transform": "ts-nameof", "type": "raw" }],
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"]
    }
  }
}
